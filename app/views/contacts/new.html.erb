<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10 col-sm-offset-1">
<p id="notice"><%= notice %></p>

<%= form_for(@contact, url: confirm_contacts_path) do |f| %>
    <%= f.error_messages! %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit %>
<% end %>

  </div>
</div>
